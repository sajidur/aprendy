@layout AccountLayout
@page "/settings/password"
@attribute [Authorize]


<RadzenStack Orientation="Orientation.Vertical">
    <RadzenText Text="Password" TextStyle="TextStyle.H4" />


    <RadzenRow>
        <RadzenColumn>
            <RadzenStack Gap="0.5em">
                <RadzenLabel Text="Current password" />
                <RadzenTextBox />

                <RadzenLabel Text="New password" class="mt-3" />
                <RadzenTextBox />

                <RadzenLabel Text="Verify password" class="mt-3" />
                <RadzenTextBox />
            </RadzenStack>
        </RadzenColumn>
    </RadzenRow>
</RadzenStack>
<RadzenButton Icon="save" Text="Change Password" class="rz-mt-5 rz-w-100" />